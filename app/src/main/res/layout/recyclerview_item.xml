<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/styleRecyclerviewItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvDescriptionNameItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:text="@string/item_name"
        android:textSize="@dimen/size_text_location_name"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tvLocationName"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLocationName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="serif-monospace"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/size_text_location_name"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvDescriptionNameItem"
        app:layout_constraintTop_toTopOf="@+id/tvDescriptionNameItem"
        tools:text="Earth" />

    <TextView
        android:id="@+id/tvDescriptionTypeItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:text="@string/item_type"
        android:textSize="@dimen/size_text_location_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLocationName" />

    <TextView
        android:id="@+id/tvLocationType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/size_text_location_type"
        app:layout_constraintStart_toEndOf="@+id/tvDescriptionTypeItem"
        app:layout_constraintTop_toTopOf="@+id/tvDescriptionTypeItem"
        tools:text="Planet" />

</androidx.constraintlayout.widget.ConstraintLayout>