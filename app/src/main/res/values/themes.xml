<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.RickAndMortyLocation" parent="Base.Theme.RickAndMortyLocation" />

    <style name="Base.Theme.RickAndMortyLocation" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="colorPrimary">@color/indigo_500</item>
        <item name="colorPrimaryVariant">@color/indigo_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="colorControlNormal">@color/black</item>
        <item name="strokeColor">@color/gray_100</item>

        <item name="colorOnBackground">@color/black</item>

        <item name="android:progressBarStyle">@style/Widget.RickAndMortyLocation.ProgressBar</item>
        <item name="materialButtonStyle">@style/Widget.RickAndMortyLocation.MaterialButton</item>

        <!--Type attributes-->
        <item name="colorOnBackgroundBody1">@color/gray_700</item>
        <item name="textAppearanceHeadline1">@style/TextAppearance.RickAndMortyLocation.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.RickAndMortyLocation.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.RickAndMortyLocation.Headline3</item>
        <item name="textAppearanceBody1">@style/TextAppearance.RickAndMortyLocation.Body1</item>
    </style>

    <!--    general  -->
    <style name="Widget.RickAndMortyLocation.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/pink_200</item>
    </style>

    <style name="Widget.RickAndMortyLocation.MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/pink_200</item>
    </style>

</resources>